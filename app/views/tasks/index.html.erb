<p>Find me in app/views/new/index.html.erb</p>
<div class="container">
  <div class="text-center">
    <h2>To-do list *</h2>

    <ul>
      <% @tasks.each do |task| %>
      <li>
        <%= link_to(task.name, task_path(id: task.id))%>: difficulty=<%= task.difficulty%>  laziness factor=<%= task.laziness %>
      </li>
      <% end %>
    </ul>
    <%= link_to "Create a Task", new_task_path%>
  </div>
</div>


